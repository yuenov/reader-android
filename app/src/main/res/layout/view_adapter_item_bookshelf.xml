<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/rivAdiBsImg"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_book_list_default"
        app:riv_corner_radius_bottom_left="5dp"
        app:riv_corner_radius_bottom_right="5dp"
        app:riv_corner_radius_top_left="5dp"
        app:riv_corner_radius_top_right="5dp"
        app:riv_oval="false" />

    <ImageView
        android:id="@+id/ivAdiBsUpdate"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rivAdiBsImg"
        android:layout_marginLeft="-29dp"
        android:src="@mipmap/ic_book_update"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvAdiBsTitle"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rivAdiBsImg"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLength="7"
        android:maxLines="1"
        android:text="title"
        android:textColor="@color/gray_3333"
        android:textSize="13sp"
        android:textStyle="bold" />

</RelativeLayout>